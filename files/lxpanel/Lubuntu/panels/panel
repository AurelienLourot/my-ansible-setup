# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
    edge=bottom
    allign=left
    margin=0
    widthtype=percent
    width=100
    height=21
    transparent=1
    tintcolor=#000000
    alpha=255
    autohide=0
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=1
    usefontcolor=1
    fontsize=10
    fontcolor=#ffffff
    usefontsize=0
    background=0
    backgroundfile=/usr/share/lxpanel/images/lubuntu-background.png
    iconsize=22
    loglevel=2
}

Plugin {
    type = deskno
    Config {
        BoldFont=0
        WMLabels=0
    }
}

Plugin {
    type = space
    Config {
        Size=15
    }
}

Plugin {
    type = taskbar
    expand=1
    Config {
        tooltips=1
        IconsOnly=0
        ShowAllDesks=1
        UseMouseWheel=1
        UseUrgencyHint=1
        FlatButton=1
        MaxTaskWidth=100
        spacing=1
        GroupedTasks=1
    }
}

Plugin {
    type = batt
    Config {
        HideIfNoBattery=0
        AlarmCommand=xmessage Battery low
        AlarmTime=5
        BackgroundColor=black
        BorderWidth=0
        ChargingColor1=#28f200
        ChargingColor2=#22cc00
        DischargingColor1=#ffee00
        DischargingColor2=#d9ca00
        Size=5
    }
}

Plugin {
    type = tray
}

Plugin {
    type = dclock
    Config {
        ClockFmt=%a %Y-%m-%d | %R
        TooltipFmt=%A %x
        BoldFont=0
        IconOnly=0
        CenterText=0
    }
}

Plugin {
    type = menu
    Config {
        image=/opt/configurelinux/start_icon.png
        system {
        }
        separator {
        }
        item {
            command=run
        }
        separator {
        }
        item {
            image=gnome-logout
            command=logout
        }
    }
}

